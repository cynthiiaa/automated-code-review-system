# Development Environment Configuration (Mac/Local Testing)
# Copy to .env for local development

# Environment
ENVIRONMENT=development

# Model Configuration
# CodeLlama-7B works on Mac with 64GB RAM using CPU device
MODEL_PATH=codellama/CodeLlama-7b-hf
MAX_BATCH_SIZE=2
QUANTIZATION_BITS=0  # Disable quantization for Mac
COMPILE_MODEL=false  # Disable compilation for stability
ENABLE_FLASH_ATTENTION=false  # Disable on non-CUDA

# Memory Settings (Conservative for Mac)
MEMORY_CACHE_SIZE=50
MAX_SEQUENCE_LENGTH=1024
MAX_NEW_TOKENS=256

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
CORS_ORIGINS=*

# Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
CACHE_TTL=1800  # 30 minutes for development
ENABLE_REDIS=false  # Use memory-only cache for local testing
ENABLE_MEMORY=true
COMPRESSION=true

# GitHub Integration (Optional)
# GITHUB_TOKEN=your_github_token_here

# Logging
LOG_LEVEL=INFO